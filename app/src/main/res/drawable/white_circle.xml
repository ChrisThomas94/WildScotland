<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="oval">

        <solid
            android:color="@color/list_item_title"/>

        <size
            android:width="90dp"
            android:height="90dp"/>
    </shape>
</item>
<item android:top="0dp" android:left="0dp" android:right="50dp" android:bottom="0dp">
    <shape android:shape="rectangle">

        <solid
            android:color="@color/list_item_title"/>

        <size
            android:width="50dp"
            android:height="50dp"/>
    </shape>
</item>
</layer-list>