<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:id="@+id/profile_picLayout"
        android:elevation="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <View
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:elevation="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_with_shadow"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:elevation="5dp"
        android:focusable="false"
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/clear_shadow">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp">

            <TextView
                android:id="@+id/name"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="name@email.com"
                android:layout_below="@+id/name"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="end"
                android:layout_toRightOf="@+id/name">

                <RelativeLayout
                    android:id="@+id/userType1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/rounded_white_button">

                    <TextView
                        android:id="@+id/userTypeText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/userType1"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rounded_white_button"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/userType2"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_white_button">

                    <TextView
                        android:id="@+id/userTypeText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/userType2"
                        android:layout_centerVertical="true"
                        android:background="@drawable/rounded_white_button"
                        android:textSize="15sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/userType3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:background="@drawable/rounded_white_button">

                    <TextView
                        android:id="@+id/userTypeText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/userType3"
                        android:background="@drawable/rounded_white_button"
                        android:layout_centerVertical="true"
                        android:textSize="15sp"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>

