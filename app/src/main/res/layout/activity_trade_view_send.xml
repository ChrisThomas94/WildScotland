<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp">

    <RelativeLayout
        android:id="@+id/theirSite"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:background="@drawable/clear_shadow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Their Site"
            android:id="@+id/signpostTheirs"/>

        <TextView
            android:id="@+id/recieveTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:text="Site title"
            android:layout_below="@+id/signpostTheirs"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/features1"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/transport"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/features2"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/mountain"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/features3"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/nature"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/features4"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/grassy_terrain3"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/features5"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/rocky_terrain"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/features6"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/sandy_terrain"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/features7"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/animals"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/features8"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/pint"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/features9"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/shop"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/features10"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/sheep"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

            </LinearLayout>

        </HorizontalScrollView>

        <RatingBar
            android:id="@+id/recieveRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="100dp"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:isIndicator="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel_Trade"
            android:text="Cancel"
            android:layout_marginRight="15dp"
            android:layout_alignParentTop="true"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnContact_User"
            android:text="Contact"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btnCancel_Trade"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/yourSite"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:padding="15dp"
        android:background="@drawable/clear_shadow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Site"
            android:id="@+id/signpostYours"/>

        <TextView
            android:id="@+id/sendTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:text="Site title"
            android:layout_below="@+id/signpostYours"/>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sendFeatures1"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/transport"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/sendFeatures2"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/mountain"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/sendFeatures3"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/nature"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/sendFeatures4"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/grassy_terrain3"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/sendFeatures5"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/rocky_terrain"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/sendFeatures6"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/sandy_terrain"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/sendFeatures7"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/animals"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/sendFeatures8"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/pint"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/sendFeatures9"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/shop"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/sendFeatures10"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/sheep"
                    android:layout_marginRight="5dp"
                    android:visibility="visible"/>

            </LinearLayout>

        </HorizontalScrollView>

        <RatingBar
            android:id="@+id/sendRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="100dp"
            android:layout_centerHorizontal="true"
            android:clickable="false"
            android:isIndicator="true"/>

    </RelativeLayout>

</LinearLayout>