<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/rounded_grey_button"/>

    <ImageView
        android:id="@+id/coverPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:clickable="true"
        android:src="@drawable/ic_add_a_photo_black_48dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/fade_box"/>

    <RelativeLayout
        android:id="@+id/mainBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:padding="10dp"
        android:background="@drawable/clear_shadow">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="Chris Thomas"
                android:textColor="#333333"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/enter_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter a short bio here. This may be viewed by other otherUsers and will help them to decide whether or not to trade locations with you."
                android:layout_margin="20dp"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/otherInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainBody"
        android:background="@drawable/clear_shadow"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/bioTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Me"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft ="15dp"
                android:visibility="visible"
                android:textSize="15sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:padding="10dp"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/whyTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why I'm on WildScotland"
                android:textColor="@color/colorPrimaryDark"
                android:paddingLeft ="15dp"
                android:visibility="visible"
                android:textSize="15sp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addWhy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/why"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:padding="10dp"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_margin="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_with_shadow"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_add_a_photo_black_48dp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilePicture"
            android:visibility="visible"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"/>


    </RelativeLayout>

</RelativeLayout>