<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFCCCCCC"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/spinner25"
            android:id="@+id/receive_Spinner"
            android:clipChildren="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:scaleType="matrix"
            android:layout_gravity="top"
            android:layout_marginTop="-160dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/recieveTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:text="Site title"/>

            <ImageView
                android:id="@+id/recievePicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_to_photos_black_48dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"/>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/recievePicture"
                android:layout_toEndOf="@+id/recievePicture"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/features1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"/>

                    <ImageView
                        android:id="@+id/features2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"/>

                    <ImageView
                        android:id="@+id/features3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"/>

                    <ImageView
                        android:id="@+id/features4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"/>

                    <ImageView
                    android:id="@+id/features5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_to_photos_black_48dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/features6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/features7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/features8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/features9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/features10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"
                        android:visibility="gone"/>

                </LinearLayout>

            </ScrollView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="100dp"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:isIndicator="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancel_Trade"
            android:text="Cancel"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSend_Trade"
            android:text="Send Trade"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/spinner25"
        android:id="@+id/send_Spinner"
        android:scaleType="matrix"
        android:clipChildren="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="bottom"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/sendTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="30sp"
                android:text="Site title"/>

            <ImageView
                android:id="@+id/sendPicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_to_photos_black_48dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"/>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sendPicture"
                android:layout_toEndOf="@+id/sendPicture"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/features21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"/>

                    <ImageView
                        android:id="@+id/features22"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"/>

                    <ImageView
                        android:id="@+id/features23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"/>

                    <ImageView
                        android:id="@+id/features24"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"/>

                    <ImageView
                        android:id="@+id/features25"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_add_to_photos_black_48dp"/>

                </LinearLayout>

            </ScrollView>

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="100dp"
                android:layout_centerHorizontal="true"
                android:clickable="false"
                android:isIndicator="true"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>